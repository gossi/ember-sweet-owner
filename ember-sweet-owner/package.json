{
  "name": "ember-sweet-owner",
  "version": "0.2.0",
  "description": "Read API for Ember's owner",
  "keywords": [
    "ember-addon"
  ],
  "repository": "https://github.com/gossi/ember-sweet-owner",
  "license": "MIT",
  "author": "Thomas Gossmann",
  "types": "dist/",
  "files": [
    "addon-main.cjs",
    "dist",
    "declarations"
  ],
  "exports": {
    ".": {
      "types": "./declarations/index.d.ts",
      "default": "./dist/index.js"
    },
    "./*": {
      "types": "./declarations/*.d.ts",
      "default": "./dist/*"
    },
    "./addon-main.js": "./addon-main.cjs"
  },
  "scripts": {
    "build": "concurrently 'npm:build:*'",
    "build:js": "rollup --config",
    "build:types": "glint --declaration",
    "lint": "concurrently 'npm:lint:*(!fix)'",
    "lint:fix": "concurrently 'npm:lint:*:fix'",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "lint:types": "glint",
    "prepack": "pnpm build",
    "release": "release-it",
    "start": "concurrently 'npm:start:*'",
    "start:js": "rollup --config -w --no-watch.clearScreen",
    "start:types": "glint --declaration -w"
  },
  "dependencies": {
    "@embroider/addon-shim": "^1.8.7",
    "@embroider/macros": "^1.13.5",
    "inflection": "^3.0.0"
  },
  "peerDependencies": {
    "ember-polaris-service": "^0.5.0"
  },
  "peerDependenciesMeta": {
    "ember-polaris-service": {
      "optional": true
    }
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/eslint-parser": "^7.25.9",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.25.9",
    "@babel/preset-typescript": "^7.26.0",
    "@babel/runtime": "^7.26.0",
    "@embroider/addon-dev": "^7.1.1",
    "@glint/core": "^1.5.0",
    "@glint/environment-ember-loose": "^1.5.0",
    "@glint/template": "^1.5.0",
    "@gossi/config-eslint": "^0.13.0",
    "@gossi/config-prettier": "^0.9.1",
    "@gossi/config-targets": "^0.9.1",
    "@release-it-plugins/lerna-changelog": "^7.0.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@tsconfig/ember": "^3.0.8",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "concurrently": "^9.1.0",
    "ember-polaris-service": "^0.5.0",
    "ember-source": "~6.0.1",
    "eslint": "^8.57.1",
    "eslint-plugin-ember": "^12.3.3",
    "prettier": "^3.4.2",
    "release-it": "^17.10.0",
    "rollup": "^4.28.1",
    "typescript": "^5.7.2"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "release-it": {
    "plugins": {
      "@release-it-plugins/lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": false
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    }
  },
  "engines": {
    "node": "18.* || >= 20"
  },
  "ember": {
    "edition": "octane"
  },
  "ember-addon": {
    "version": 2,
    "type": "addon",
    "main": "addon-main.cjs",
    "app-js": {}
  },
  "volta": {
    "extends": "../package.json"
  }
}
